<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project_issue_categ_act1" model="ir.actions.act_window">
            <field name="name">Issues</field>
            <field name="res_model">project.issue</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,calendar,form,pivot,graph</field>
            <field name="view_id" eval="False"/>
            <field name="domain" eval=""/>
            <field name="search_view_id" ref="project_issue.view_project_issue_filter"/>
            <!--<field name="group">project.group_project_manager</field>-->
            <field name="help" type="html">
                <p>
                    The Odoo issues tracker allows you to efficiently manage things
                    like internal requests, software development bugs, customer
                    complaints, project troubles, material breakdowns, etc.
                </p>
            </field>
        </record>

        <menuitem name="Search"
            id="project.menu_project_management"
            parent="project.menu_main_pm"
            sequence="2" groups="base.group_no_one,project.group_project_user,project.group_project_manager"/>

        <menuitem id="project_issue.menu_project_issue_track" name="Issues" parent="project.menu_project_management"
                  action="project_issue_categ_act1" groups="project.group_project_manager"/>


        <record id="project_issue_categ_act0" model="ir.actions.act_window">
            <field name="name">Issues</field>
            <field name="res_model">project.issue</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,calendar,form,pivot,graph</field>
            <field name="view_id" eval="False"/>
            <field name="domain" eval=""/>
            <field name="search_view_id" ref="project_issue.view_project_issue_filter"/>
            <field name="context">{'search_default_my_issues': 1}</field>

            <field name="help" type="html">
                <p>
                    The Odoo issues tracker allows you to efficiently manage things
                    like internal requests, software development bugs, customer
                    complaints, project troubles, material breakdowns, etc.
                </p>
            </field>
        </record>
        <menuitem id="menu_project_issue_track_user" name="Issues" parent="project.menu_project_management"
                  action="project_issue_categ_act0" groups="project.group_project_user"/>
    </data>



</odoo>