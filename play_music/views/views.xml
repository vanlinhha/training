<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="song_tree_view">
            <field name="name">play_music.playmusic.tree</field>
            <field name="model">playmusic</field>
            <field name="arch" type="xml">
                <tree>
                    <!--<button type="object" name="play" string="Play"/>-->
                    <field name="title"/>
                    <field name="artist"/>
                    <field name="link"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="song_form_view">
            <field name="model">playmusic</field>
            <field name="view_type">form</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="link"/>
                        <field name="title"/>
                        <field name="artist"/>
                        <image src="thumbnail"/>
                    </group>

                </form>
            </field>
        </record>

        <record id="actplaymusic" model="ir.actions.act_window">
            <field name="name">Playlist</field>
            <field name="res_model">playmusic</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="playmusicmenu" name="Play music"/>
        <menuitem id="songlistmenu" name="Songs" parent="playmusicmenu" action="actplaymusic"/>

    </data>
</odoo>